{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "customDatasources": {
    "cluster": {
      "defaultRegistryUrlTemplate": "https://raw.githubusercontent.com/canonical/ubuntu.com/main/releases.yaml",
      "format": "yaml",
      "transformTemplates": [
        "{\"releases\": [{\"version\": $.(data).full_version}], \"homepage\": \"https://ubuntu.com\", \"sourceUrl\": \"https://github.com/canonical/ubuntu.com\"}"
      ]
    }
  },
  "customManagers": [
    {
      "customType": "regex",
      "datasourceTemplate": "custom.cluster",
      "depNameTemplate": "cluster/ubuntu",
      "fileMatch": [
        "roles/cluster/Chart.yaml"
      ],
      "matchStrings": [
        "version:\\s+(?<currentValue>.+)"
      ]
    }
  ],
  "enabledManagers": [
    "custom.regex"
  ],
  "extends": [
    "config:recommended"
  ],
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0
}
